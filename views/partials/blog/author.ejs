<header class="mb-4 lg:mb-6 not-format">
  <address class="flex items-center mb-6 not-italic">
    <div class="inline-flex gap-4 items-center mr-3 text-sm text-gray-900 dark:text-white">
      <img class="mr-4 w-16 h-16 rounded-full" src="<%= blog.createdBy.profileImageURL %>" alt="<%= blog.createdBy.fullName %>">
      <div>
        <a href="#" rel="author" class="text-xl font-bold text-gray-900 dark:text-white"><%= blog.createdBy.fullName %></a>
        <p class="text-base text-gray-500 dark:text-gray-400"><%= blog.createdBy.email %></p>
        <p class="text-base text-gray-500 dark:text-gray-400"><time pubdate datetime="<%= formatDateStandard(blog.createdAt) %>" title="<%= formatDateWithOrdinal(blog.createdAt) %>"><%= formatDateWithOrdinal(blog.createdAt) %></time></p>
      </div>
    </div>
  </address>
  <h1 class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white"><%= blog.title %></h1>
  <img class="h-auto max-w-full" src="<%= blog.coverImageURL %>" alt="image description">
</header>