<header class="mb-4 lg:mb-6 not-format">
  <div class="flex items-center justify-between">
    <address class="flex items-center mb-6 not-italic">
      <div class="inline-flex gap-4 items-center mr-3 text-sm text-gray-900 dark:text-white">
        <img class="mr-4 w-16 h-16 rounded-full" src="<%= blog.createdBy.profileImageURL %>" alt="<%= blog.createdBy.fullName %>">
        <div>
          <a href="#" rel="author" class="text-xl font-bold text-gray-900 dark:text-white"><%= blog.createdBy.fullName %></a>
          <p class="text-base text-gray-500 dark:text-gray-400"><%= blog.createdBy.email %></p>
          <p class="text-base text-gray-500 dark:text-gray-400"><time pubdate datetime="<%= formatDateStandard(blog.createdAt) %>" title="<%= formatDateWithOrdinal(blog.createdAt) %>"><%= formatDateWithOrdinal(blog.createdAt) %></time></p>
        </div>
      </div>
    </address>
    <% if (locals.user && user._id === blog.createdBy._id.toString()) { %>
    <div class="flex gap-2">
      <form action="/blog/edit/<%= blog._id %>" method="get">
        <button type="submit">
          <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z" />
          </svg>
        </button>
      </form>
      <form action="/blog/delete/<%= blog._id %>" method="get">
        <button type="submit">
          <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z" />
          </svg>
        </button>
      </form>
    </div>
    <% } %>
  </div>
  <h1 class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white"><%= blog.title %></h1>
  <img class="h-auto max-w-full" src="<%= blog.coverImageURL %>" alt="image description">
</header>